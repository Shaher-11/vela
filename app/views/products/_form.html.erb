<div class="container">
<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-group">
  <div>
    <%= form.text_field :title, class: "form-control",  placeholder: "Product Name" %>
  </div>

  <div>
    <%= form.text_field :short_description,  class: "form-control",  placeholder: "Product Information" %>
  </div><br>

  <div>
    <%= form.rich_text_area :description,  placeholder: "Product Full Description" %>
  </div><br>

  <div>
    <%= form.number_field :original_price,  class: "form-control",  placeholder: "Original Price" %>
  </div><br>

  <div>
    <%= form.number_field :final_price,  class: "form-control",  placeholder: "Final Price" %>
  </div><br>

  <div>
    <%= form.text_area :avatar,  class: "form-control", placeholder: "Add Product Image link" %>
  </div><br>

  <div class="text-center">
    <%= form.submit class: "btn btn-large btn-success" %>
  </div>
<% end %>
</div>
</div>